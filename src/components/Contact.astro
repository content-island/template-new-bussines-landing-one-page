<section class="wrapper py-big-1 md:py-big-4" id="contact">
  <header>
    <h2 class="mb-md text-2xl">Get In Touch</h2>
    <p class="mb-big-1 max-w-[40ch]">
      Have a project in mind? We'd love to hear from you. Send us a message and we'll respond as soon as possible.
    </p>
  </header>
  <form
    class="gap-lg p-lg mx-auto flex max-w-[670px] flex-col items-end rounded-lg"
    style="background-color: var(--bg-secondary);"
    action="#"
    method="POST"
  >
    <div class="flex w-full flex-col">
      <label for="name" class="text-xs">Name:</label>
      <input
        type="text"
        id="name"
        name="name"
        class="p-sm resize-y rounded-sm border-none text-xs"
        style="background-color: var(--input-background); color: var(--text-color); font-family: var(--font-body);"
        required
      />
    </div>
    <div class="flex w-full flex-col">
      <label for="email" class="text-xs">Email:</label>
      <input
        type="email"
        id="email"
        name="email"
        class="p-sm resize-y rounded-sm border-none text-xs"
        style="background-color: var(--input-background); color: var(--text-color); font-family: var(--font-body);"
        required
      />
    </div>
    <div class="flex w-full flex-col">
      <label for="message" class="text-xs">Message:</label>
      <textarea
        id="message"
        name="message"
        class="p-sm min-h-[100px] resize-none rounded-sm border-none text-xs"
        style="background-color: var(--input-background); color: var(--text-color); font-family: var(--font-body);"
        required></textarea>
    </div>
    <button type="submit" class="btn-primary-fill btn-small"> Send Message </button>
  </form>
</section>
