<section class="py-big-1 md:py-big-4" style="background-color: var(--bg-secondary);" id="services">
  <div class="wrapper gap-big-1 md:gap-big-2 flex flex-col">
    <header class="mx-auto max-w-[48ch] text-center">
      <h2 class="mb-lg text-2xl">Our Services</h2>
      <p>
        Transform your ideas into reality with our innovative solutions. We help businesses grow and succeed in the
        digital age through cutting-edge technology and creative strategies.
      </p>
    </header>
    <ul class="gap-2xl md:gap-big-1 flex flex-col">
      {
        services.map((service, index) => (
          <li>
            <div
              class="gap-md md:gap-xl mx-auto grid max-w-[968px] grid-cols-1 overflow-hidden rounded-lg md:grid-cols-2"
              style="background-color: var(--bg-primary); box-shadow: var(--shadow-card);"
            >
              <img
                src={service.image}
                alt={service.alt}
                loading="lazy"
                width="350"
                class={`w-full object-cover ${index === 1 ? 'md:order-2' : ''}`}
              />
              <div class={`p-md md:p-xl gap-lg flex flex-col md:justify-center ${index === 1 ? 'md:order-1' : ''}`}>
                <div class="gap-md flex flex-col">
                  <h3 class="text-lg leading-none font-bold">{service.title}</h3>
                  <p>{service.description}</p>
                </div>
                <a href="#" class="btn-primary-outline btn-small">
                  Learn more
                </a>
              </div>
            </div>
          </li>
        ))
